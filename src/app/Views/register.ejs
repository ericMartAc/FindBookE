<!doctype html>
<html lang="en">

<head>
    <%- include ('Partials/head') -%> 
</head>

<body id="top">

    <div id="overlayer"></div>
    <div class="loader">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>


    <div class="site-wrap">

        <div class="site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>
        <!-- .site-mobile-menu -->


        <!-- NAVBAR -->
        <header class="site-navbar mt-3">
            <%- include ('Partials/nav') -%>
        </header>

        <!-- HOME -->
        <section class="section-hero overlay inner-page bg-image" style="background-image: url('images/hero_1.jpg');" id="home-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-7">
                        <h1 class="text-white font-weight-bold">Inicio de Sesión/Registro</h1>
                        <div class="custom-breadcrumbs">
                            <a href="/">Home</a> <span class="mx-2 slash">/</span>
                            <span class="text-white"><strong>Log In</strong></span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="site-section">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 mb-5">
                        <h2 class="mb-4">Registrarse como colaborador Findbook</h2>
                        <form method="POST" action="/register" class="p-4 border rounded">
                            <div class="row form-group mb-4">
                                <div class="col-md-12 mb-3 mb-md-0">
                                    <label class="text-black" for="categ">Categoria</label>
                                    <select id="categ" name="categ" class="selectpicker border" data-style="btn-white btn-lg" data-width="100%" data-live-search="true" title="Selecciona una categoria">
                                        <option value='Profesionales en Informática' >Profesionales en Informática</option>
                                        <option value='Electrónica' >Electrónica</option>
                                        <option value='Manufactura' >Manufactura</option>
                                        <option value='Conductores' >Conductores</option>
                                        <option value='Mecánica' >Mecánica</option>
                                        <option value='Seguridad y salud en el trabajoConstrucción' >Seguridad y salud en el trabajoConstrucción</option>
                                        <option value='Construcción' >Construcción</option>
                                        <option value='Jardineros' >Jardineros</option>
                                        <option value='Detectives' >Detectives</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-12 mb-3 mb-md-0">
                                    <label class="text-black" for="nombre">Nombre completo</label>
                                    <input type="text" id="nombre" name="nombre" class="form-control" placeholder="Ingrese su nombre">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-12 mb-3 mb-md-0">
                                    <label class="text-black" for="email">Correo Electronico</label>
                                    <input type="text" id="email" name="email" class="form-control" placeholder="dirección de correo electrónico">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-12 mb-3 mb-md-0">
                                    <label class="text-black" for="dpto">Departamento</label>
                                    <input type="text" id="dpto" name="dpto" class="selectpicker form-control" placeholder="ingrese su departamento">
                                </div>
                            </div>
                            <div class="row form-group mb-4">
                                <div class="col-md-12 mb-3 mb-md-0">
                                    <label class="text-black" for="psw">Contraseña</label>
                                    <input type="password" id="psw" name="psw" class="form-control" placeholder="Ingrese su contraseña">
                                </div>
                            </div>
                            <div class="row form-group mb-4">
                                <div class="col-md-12 mb-3 mb-md-0">
                                    <label class="text-black" for="psw_conf">Confirma la contraseña</label>
                                    <input type="password" id="psw_conf" name="psw_conf" class="form-control" placeholder="Repita su contraseña">
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <input type="submit" value="Registrarse" class="btn px-4 btn-primary text-white">
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </section>

        <footer class="site-footer">
            <%- include ('Partials/footer') -%>
        </footer>

    </div>
    <%- include ('Partials/scritps') -%>
</body>

</html>